<h1>Auto load a course from url</h1>
<% unless @result.nil? %>
    You have just added the following course:
    <br>
    <%= render :partial => 'show_diff', :locals => {:result => @result} %>

    <%= link_to 'View', course_path(@result[:course]), :class => 'btn btn-default' %>
    <%= link_to 'Edit', rails_admin.edit_path(:model_name => Course::Course, :id => @result[:course].id), :class => 'btn btn-danger' %>
    <hr>

    Add an other course
<% end %>

<%= form_tag(admin_utils_course_load_all_path) do %>
    <%= submit_tag 'Load all courses', :class => 'btn btn-danger needconfirmation',
                   'data-confirmation-dialog' => 'Warning: This take some time and will freeze the server in development until complete', :rel => 'tooltip' %>
<% end %>
<%= form_tag(admin_utils_course_load_create_path) do %>
    <div class="form-group">
      <%= text_field_tag :url, @url, :class => 'form-control' %>
      <br>
      <%= submit_tag 'Load', :class => 'btn btn-default' %>
    </div>
<% end %>