Sign Up

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.email_field :email, :autofocus => true, :placeholder => "Enter your email!" %></div>

  <div><%= f.password_field :password, :placeholder => "Enter your password!" %></div>

  <div><%= f.password_field :password_confirmation, :placeholder => "Enter your password again!" %></div>

  <div><%= f.submit "Sign Up" %></div>
<% end %>

<%= render "devise/shared/links" %>
