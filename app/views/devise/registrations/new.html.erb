<div id="login_content" class="content_box">
  <h2>Sign Up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form_container"><%= f.email_field :email, :autofocus => true, :placeholder => "Enter your email!", :class => "form_input_long middle form_biginput" %></div>

      <div class="form_container"><%= f.password_field :password, :placeholder => "Enter your password!", :class => "form_input_long middle form_biginput" %></div>

      <div class="form_container"><%= f.password_field :password_confirmation, :placeholder => "Enter your password again!", :class => "form_input_long middle form_biginput" %></div>

      <div class="right"><%= f.submit "Sign Up" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>