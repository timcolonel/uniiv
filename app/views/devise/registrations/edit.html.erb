<% if current_user.emails.size > 1 %>
  <div id="login_content" class="content_box">
    <h2>Delete Emails</h2>
    
    <%= form_for :emails do |f| %>

        <div class="form_container"><%= f.select(:emails, UserEmail.all.where('user_id' => current_user), {} ,{ :class => "form_input_long middle form_biginput", :style => "border-radius: 5px;border:1px solid #d5d5d5;"}) %></div>
       
        <div class="right"><%= f.submit "Delete" %></div>
    <% end %>
  </div>
<% end %>

<div id="login_content" class="content_box">
  <h2>Edit Password</h2>
  
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f| %>
    <%= devise_error_messages! %>

      <div class="form_container"><%= f.email_field :email, :autofocus => true, :placeholder => "Enter your email", :class => "form_input_long middle form_biginput", :type => :hidden %></div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form_container"><%= f.password_field :password, :autocomplete => "off", :placeholder => "Enter a new password!", :class => "form_input_long middle form_biginput" %></div>

      <div class="form_container"><%= f.password_field :password_confirmation, :placeholder => "Enter the new password again!", :class => "form_input_long middle form_biginput" %></div>

      <div class="form_container"><%= f.password_field :current_password, :placeholder => "Enter your current password!", :class => "form_input_long middle form_biginput" %></div>

      <div class="right"><%= f.submit "Update" %></div>
  <% end %>
</div>