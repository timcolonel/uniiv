<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <h2>Edit Password</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put, :class => 'form'}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form_container"><%= f.email_field :email, :autofocus => true, :placeholder => "Enter your email", :class => "form_input_long middle form_biginput", :type => :hidden %></div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <label>Current Password</label>
        <%= f.password_field :password, :autocomplete => "off", :placeholder => "Enter a new password!", :class => 'form-control' %>
      </div>

      <div class="form-group">
        <label>New password</label>
        <%= f.password_field :password_confirmation, :placeholder => "Enter the new password again!", :class => 'form-control' %>
      </div>

      <div class="form-group">
        <label>Repeat New Password</label>
        <%= f.password_field :current_password, :placeholder => "Enter your current password!", :class => 'form-control' %>
      </div>

      <div class="pull-right"><%= f.submit("Update", :class => 'btn btn-primary') %></div>
    <% end %>
  </div>
</div>
