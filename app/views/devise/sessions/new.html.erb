<div id="login_content" class="content_box">
  <h2>Log In</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <div class="form_container"><%= f.email_field :email, :autofocus => true, :placeholder => "Enter your Email!", :class => "form_input_long middle form_biginput" %></div>

    <div class="form_container"><%= f.password_field :password, :placeholder => "Enter your password!", :class => "form_input_long middle form_biginput" %></div>

    <% if devise_mapping.rememberable? -%>
      <div class="form_container center"><span class="small-text"><%= f.check_box :remember_me %><%= f.label :remember_me %></span></div>
    <% end -%>
    
    <div class="right"><%= f.submit "Log In" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>