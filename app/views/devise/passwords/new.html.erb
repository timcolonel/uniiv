<div id="login_content" class="content_box">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form_container"><%= f.email_field :email, :autofocus => true, :placeholder => "Enter your email!", :class => "form_input_long middle form_biginput" %></div>
    
    <div class="right"><%= f.submit "Reset Password" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>