<div id="login_content" class="content_box">
  <h2>Change your password</h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put}) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div><%= f.password_field :password, :autofocus => true, :placeholder => "Enter a new password!" %></div>

      <div><%= f.password_field :password_confirmation, :placeholder => "Enter your new password again!" %></div>

      <div><%= f.submit "Change my password" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>