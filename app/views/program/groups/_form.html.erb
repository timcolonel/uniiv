<%= form_for @group do |f| %>
    <div class="form-group">
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <div class="form-group">
      Requirement to complete this group(Minmimum number of credit, class program, ...)<br>
      For example if you are required to complete 9 credit in the spcified courses then put type to be min_credit and
      value to 9
    </div>
    <div class="form-group">
      <%= f.submit :Save, :class => 'btn btn-default' %>
      <%= f.submit 'Save and edit', :name => :saveandedit, :class => 'btn btn-default' %>
    </div>

    <%= hidden_field_tag :parent_id, @group.parent.id %>
    <%= hidden_field_tag :parent_type, @group.parent.class.to_s %>
<% end %>