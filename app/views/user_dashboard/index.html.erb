<div class='container'>
  <h1>
    <span>Your Education</span>

    <div class='btn-group pull-right'>
      <a href='<%= transcript_loader_parse_path %>' class='btn btn-primary' title='Upload your transcript' rel='tooltip'>
        <span class='glyphicon glyphicon-upload'></span>
      </a>
      <a href='<%= user_education_selection_path %>' class='btn btn-danger' title='To edit your university, faculty and programs' rel='tooltip'>
        <span class='glyphicon glyphicon-edit'></span>
      </a>
    </div>
  </h1>
</div>

<div id='user_education_status_container' data-url='<%= user_education_status_content_path %>'>
  <%= render :partial => 'education_status' %>
</div>
<% if current_user.completed_courses.empty? and current_scenario.taking_courses.empty? %>
    <hr>
    <h2>You have not selected any courses yet</h2>
    <div class='text-center'>
      <a href="<%= transcript_loader_parse_path if user_signed_in? %>" class="btn">
        <div>
          <span class='glyphicon glyphicon-cloud-upload glyphicon-xl lightest_bluetext'></span>
        </div>
        <div>
          <h3>Upload your transcript</h3>
        </div>
      </a>
    </div>
<% else %>
    <div id='user_course_taking_container' data-url='<%= user_education_course_taking_content_path %>'>
      <%= render :partial => 'course_taking' %>
    </div>
    <div id='user_course_completed_container' data-url='<%= user_education_course_completed_content_path %>'>
      <%= render :partial => 'course_completed' %>
    </div>

<% end %>
