      <% @semesters.each do |semester| %>
          <%= f.label :semester_id, semester.name, :value => semester.id %>
          <%= f.radio_button :semester_id, semester.id %>
      <% end %>
    </div>
    <div>
      <%= f.label :year %>
      <%= f.text_field :year %>
    </div>
    <div>
      <%= f.submit %>
    </div>
<% end %>