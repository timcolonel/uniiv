<div class='course-buttons-container'>
  <div class='btn-group'>
    <% unless c.advanced_standing %>
        <a type='button' href='<%= course_review_new_path(c.course) %>' <%= 'disabled' if current_user.reviewed_course?(c.course) %> class='btn btn-success' rel='tooltip' data-toggle='tooltip' title='Review'>
          <span class='whitetext glyphicon glyphicon-comment'></span>
        </a>
    <% end %>
    <a type='button' href='<%= course_path(c) %>' class='btn btn-info' rel='tooltip' data-toggle='tooltip' title='<%= c.course.name %>'>
      <span class='whitetext glyphicon glyphicon-info-sign'></span></a>
    <% unless c.advanced_standing %>
        <%= group_button_to user_remove_course_path(c.course),
                            :name => :course_id, :value => c.course.id, :useajax => true, :delete_parent => '.course_completed_container',
                            :class => 'btn btn-danger', :rel => 'tooltip', 'data-toggle' => 'tooltip', :title => 'Remove' do %>
            <span class='glyphicon glyphicon-remove-sign'></span>
        <% end %>
    <% end %>
  </div>
</div>