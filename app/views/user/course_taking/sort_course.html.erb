<style>
    body.dragging, body.dragging * {
        cursor: move !important;
    }

    .dragged {
        position: absolute;
        opacity: 0.5;
        z-index: 2000;
    }

    ul.sortable li {
        display: block;
        margin: 5px;
        padding: 5px;
        border: 1px solid #CCC;
        background: #DBDBDB;
        cursor: pointer;
    }

    ul.sortable li.placeholder {
        position: relative;
        border-style: dashed;
        background: transparent;
        /** More li styles **/
    }

    ul.sortable li.placeholder:before {
        position: absolute;
        /** Define arrowhead **/
    }
</style>

<div id='course_sorter' data-update-url='<%= update_course_taking_path %>'>
  <div id='message_container'></div>
  <ul class='sortable no-drop'>
    <h4> <%= t('course.before_current_term') %></h4>
    <% @previous_courses.each do |course| %>
        <li>
          <div data-course-id='<%= course.id %>'><%= course.course.to_s %></div>
        </li>
    <% end %>
  </ul>

  <% @terms.each do |term, courses| %>
      <h4><%= term.semester %>  <%= term.year %></h4>
      <ul data-semester='<%= term.semester.id %>' data-year='<%= term.year %>' class='sortable connected'>
        <% courses.each do |course| %>
            <li>
              <div data-course-id='<%= course.course.id %>'><%= course.course.to_s %></div>
            </li>
        <% end %>
      </ul>
  <% end %>
</div>