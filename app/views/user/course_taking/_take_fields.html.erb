<div>
  <div><h4><%= t('label.semester') %>:</h4></div>
  <% @semesters.each do |semester| %>
      <div>
        <h5><%= f.radio_button :semester_id, semester.id %><%= f.label :semester, semester.name.capitalize, :value => semester.id %></h5>
      </div>
  <% end %>
</div>
<div>
  <div><h4><%= f.label :year %>:</h4></div>
  <div><%= f.text_field :year, :class => "form_input_longer" %></div>
</div>