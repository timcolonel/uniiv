<div>
  <div><h4><%= link_to group.name, group_path(group) %></h4></div>
  <hr>

  <% unless group.courses.empty? %>
      <div class="container-fluid">
        <% group.courses.each do |course| %>
            <div class='dashboard_coursebox'>
              <div class='row'>
                <div class='col-md-9'>
                  <%= link_to course.get_detail_name, course_path(course) %>
                </div>
                <div class='col-md-3'>
                  <%= user_course_buttons(course) %>
                </div>
              </div>
            </div>
        <% end %>
      </div>
  <% end %>
  <% unless group.subgroups.empty? %>
      <div>
        <div class='list-group'>
          <% group.subgroups.each do |subgroup| %>
              <div class="list-group-item">
                <%= render :partial => 'program_group/show', :locals => {:group => subgroup} %>
              </div>
          <% end %>
        </div>
      </div>
  <% end %>
</div>