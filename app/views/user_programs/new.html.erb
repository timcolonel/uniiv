<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <h2>Add a program</h2>
    <%= form_tag(user_programs_create_path) do %>
      <div class='form-group'>
        <label>Search for a program by name type or faculty.</label>
        <%= text_field_tag('doesntmatter', nil, options = {:class => 'form-control autocomplete', 'data-url' => program_search_autocomplete_path + '?only_not_taking=true', 'data-input-data' => '#prog'}) %>
      </div>
      <%= hidden_field_tag('prog', nil, 'id' => 'prog') %>

      <div class='pull-right'>
        <%= submit_tag('Add', :class => 'btn btn-primary') %>
      </div>
    <% end %>
  </div>
</div>

