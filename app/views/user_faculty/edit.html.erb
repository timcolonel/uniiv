<div class="content_box pagewidth_twothirds">
  <h2>Choose your faculty</h2>
  <%= form_tag(user_faculty_update_path) do %>
    <div><h5>Search for a faculty, either by name or by university name.</h5></div>
    <%= text_field_tag("doesntmatter", nil, options = {:class => "form_biginput form_input_longer autocomplete", "data-url" => faculty_search_autocomplete_path + "?only_not_taking=true", "data-input-data" => "#fac"}) %>
    <%= hidden_field_tag("fac", nil, "id" => "fac") %>
    <div class="right">
      <%= submit_tag("Choose") %>
    </div>
<% end %>
</div>

