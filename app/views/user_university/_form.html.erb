<%= form_tag(user_university_update_path) do %>
    <div class='form-group'>
      <div class="input-group">
        <%= text_field_tag('university_id', '', options =
                {:class => 'form-control autocomplete disablesubmit', 'data-url' => university_search_autocomplete_path, 'data-input-data' => 'true'}) %>

        <span class="input-group-btn">
            <%= submit_tag('Choose', :class => 'btn btn-primary needconfirmation', :disabled => true, 'data-confirm-dialog' => t('user.university.edit.confirmation')) %>
        </span>
      </div>
    </div>
<% end %>