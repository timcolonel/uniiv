<h1>Final grade calculator</h1>
<span>Calculate the grade you need to get at your final to achieve your goal</span>
<hr>

<div>First select the course</div>
<div>
  <%= form_tag(utils_fgc_path, :method => 'get') do %>
      <div class='form-group'>
        <div class='input-group'>
          <%= text_field_tag(:q, params[:q], options = {:class => 'form-control search-ajax', 'data-search-output' => '#course_list_container', 'data-search-url' => utils_fgc_search_path}) %>
          <span class="input-group-btn">
                <%= submit_tag('Search', :class => 'btn btn-primary') %>
            </span>
        </div>
      </div>
  <% end %>
  <div id='course_list_container'>
    <%= render :partial => 'course_link_list' %>
  </div>
</div>